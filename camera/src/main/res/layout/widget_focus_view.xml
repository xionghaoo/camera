<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/focus_view"
        android:layout_width="@dimen/camera_focus_view_size"
        android:layout_height="@dimen/camera_focus_view_size"
        android:visibility="invisible"
        android:background="@drawable/shape_ring_focus"
        />

    <View
        android:id="@+id/focus_view_circle"
        android:layout_width="@dimen/camera_focus_view_size"
        android:layout_height="@dimen/camera_focus_view_size"
        android:visibility="invisible"
        android:background="@drawable/shape_circle_focus"
        />

</FrameLayout>